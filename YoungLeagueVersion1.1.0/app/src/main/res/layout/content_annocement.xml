<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/announce_tv_title"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="测试"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"/>
    <ImageView
        android:layout_below="@id/announce_tv_title"
        android:id="@+id/announce_author"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/announce_author"/>
    <TextView
        android:layout_toEndOf="@id/announce_author"
        android:layout_below="@id/announce_tv_title"
        android:id="@+id/announce_tv_author"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="中国大学生在线"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:textColor="#8a8a8a"
        android:paddingBottom="0dp"/>
    <ImageView
        android:layout_toEndOf="@id/announce_tv_title"
        android:layout_width="103dp"
        android:layout_height="70dp"
        android:src="@drawable/china"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:scaleType="fitXY"/>

</RelativeLayout>