<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/content_joural_header"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingBottom="20dp"
        android:src="@drawable/headerpicture"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/content_joural_title"
        android:layout_toEndOf="@id/content_joural_header"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="ok"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/content_joural_content"
        android:layout_below="@id/content_joural_title"
        android:layout_toEndOf="@id/content_joural_header"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="ok"
        android:textColor="#9e9e9e"/>

    <TextView
        android:id="@+id/content_joural_date"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/content_joural_header"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>
</RelativeLayout>