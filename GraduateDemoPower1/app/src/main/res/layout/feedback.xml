<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:gravity="center"
        android:text="界面效果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:id="@+id/textViewback2"
        android:textSize="25dp"
        android:layout_above="@+id/textViewback3" />

    <TextView
        android:gravity="center"
        android:text="内容提供"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_alignEnd="@+id/textViewback2"
        android:textColor="#000000"
        android:id="@+id/textViewback3"
        android:textSize="25dp"
        android:layout_above="@+id/textViewback4" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/ratingBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        style="@style/myRatingBar"
        android:numStars="3"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        style="@style/myRatingBar"
        android:numStars="3"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignStart="@+id/ratingBar2"
        style="@style/myRatingBar"
        android:numStars="3"/>

    <TextView
        android:gravity="center"
        android:text="使用体验"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar2"
        android:textColor="#000000"
        android:id="@+id/textViewback4"
        android:textSize="25dp"
        android:layout_above="@+id/textViewback6" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textViewback6"
        android:layout_alignParentStart="true" />

    <Button
        android:text="提交"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:onClick="feedback"/>

    <TextView
        android:text="您的意见与建议："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textViewback6"
        android:textSize="20dp"
        android:layout_below="@+id/ratingBar3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>