<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/detail_rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#af0909">
        <ImageButton
            android:id="@+id/ib_main"
            android:background="#af0909"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_main"
            android:foregroundGravity="center"
            android:padding="5dp"
            />
        <TextView
            android:layout_toEndOf="@id/ib_main"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:text="支部工作"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="50dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/detail_rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <!--<Toolbar
               android:layout_width="match_parent"
               android:layout_height="70dp"></Toolbar>-->
           <RelativeLayout
               android:id="@+id/detail_rl_title"
               android:layout_below="@id/detail_rl_top"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/detail_tv_title"
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:textColor="#000000"
                   android:text="title"
                   android:textSize="25sp"
                   android:textStyle="bold"
                   android:gravity="left"
                   android:paddingLeft="20dp"
                   android:paddingTop="10dp"
                   android:paddingRight="20dp"/>
               <TextView
                   android:id="@+id/detail_tv_default1"
                   android:layout_below="@id/detail_tv_title"
                   android:layout_width="70dp"
                   android:layout_height="20dp"
                   android:text="来源："
                   android:gravity="left"
                   android:paddingLeft="20dp"
                   android:textColor="#000000"/>
               <TextView
                   android:id="@+id/detail_tv_university"
                   android:layout_toEndOf="@id/detail_tv_default1"
                   android:layout_below="@id/detail_tv_title"
                   android:layout_width="385dp"
                   android:layout_height="20dp"
                   android:text="上海市/上海外国语大学/英语学院教工党支部"
                   android:textColor="#af0909"
                   android:gravity="left" />
               <LinearLayout
                   android:orientation="horizontal"
                   android:id="@+id/detail_ll_date"
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:layout_toEndOf="@id/imgview1"
                   android:layout_below="@id/detail_tv_default1"
                   android:layout_marginStart="20dp">
                   <ImageView
                       android:layout_marginStart="5dp"
                       android:layout_width="20dp"
                       android:layout_height="match_parent"
                       android:src="@drawable/eye_main"
                       android:layout_gravity="center"/>
                   <TextView
                       android:id="@+id/detail_tv_vedio"
                       android:layout_width="50dp"
                       android:layout_height="match_parent"
                       android:text="999"
                       android:gravity="center"
                       android:textColor="#000000"/>
                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="15dp"
                       android:layout_gravity="center"
                       android:src="@drawable/thunb_main"/>
                   <TextView
                       android:id="@+id/detail_tv_fancy"
                       android:layout_width="50dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text="999"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/detail_tv_date"
                       android:layout_width="180dp"
                       android:layout_height="match_parent"
                       android:text="2017-5-10"
                       android:gravity="right|center"
                       android:paddingRight="10dp"/>

               </LinearLayout>
               <View
                   android:id="@+id/diliver"
                   android:layout_below="@id/detail_ll_date"
                   android:layout_width="match_parent"
                   android:layout_height="3px"
                   android:background="#d4d4d4"
                   />
               <TextView
                   android:id="@+id/detail_tv_summary"
                   android:layout_below="@id/diliver"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="本片是对大连理工"
                   android:textColor="#000000"
                   android:gravity="left"
                   android:paddingLeft="25dp"
                   android:paddingTop="10dp"
                   android:paddingRight="25dp"/>
           </RelativeLayout>
       </LinearLayout>
    </ScrollView>

</RelativeLayout>